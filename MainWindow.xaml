<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SalfetkaBlog.Views.MainWindow"
        Title="SalfetkaBlog"
        Width="800" Height="600">
    <StackPanel>
        <TextBlock Text="Blog Posts" FontSize="20" Margin="10"/>
        <ListBox x:Name="PostListBox" Margin="10" Height="400"/>
        <Button Content="Add Post" Margin="10" Click="AddPost_Click"/>
        <Button Content="Edit Post" Margin="10" Click="EditPost_Click"/>
        <Button Content="Delete Post" Margin="10" Click="DeletePost_Click"/>
    </StackPanel>
</Window>
